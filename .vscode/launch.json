    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Smart Home App",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/smart_home_sim/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": []
        },
        {
            "name": "Debug Smart Home App (Verbose)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/smart_home_sim/main.py",
            "console": "integratedTerminal", 
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYTHONUNBUFFERED": "1"
            },
            "args": ["--verbose"]
        },
        {
