{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Smart Home App",
            "type": "shell",
            "command": "python",
            "args": ["main.py"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$python"
        },
        {
            "label": "Run Image Tests",
            "type": "shell",
            "command": "python",
            "args": ["direct_image_test.py"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$python"
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "pip",
            "args": ["install", "-r", "requirements.txt"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Clean Logs",
            "type": "shell",
            "command": "powershell",
            "args": ["-Command", "Remove-Item logs\\*.log -Force -ErrorAction SilentlyContinue; Write-Host 'Log files cleaned'"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "View Recent Logs",
            "type": "shell", 
            "command": "powershell",
            "args": ["-Command", "Get-Content logs\\smarthome.log -Tail 50 -ErrorAction SilentlyContinue"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}